<h1>Home#index</h1>
<div id="cate" class="categories">
	 <div class="container">
		 <h3>CATEGORIES</h3>
		 <div class="categorie-grids">
			 <% @categories.each.with_index do |category, i| %>
			 	<div class="col-md-4 cate-grid grid<%= i+1 %>">
					<h4><%= category.name %></h4>
					<p>Venez les découvrir !</p>
          <%= link_to "Boutique", items_path(id: category.id), class: "store" %>
				</div>
			 <% end %>
			 <div class="clearfix"></div>
		 </div>
	 </div>
</div>
<!--bikes-->
<div id="boutique" class="products">
    <h3>POPULAR products</h3>
    <div class="products-grid">
      <ul id="flexiselDemo1">
        <% @items.first(8).each do |item| %>
        <li>
          <%= image_tag "#{item.image_url}1.png" %>
          <div class="products-info">
            <div class="model">
              <h4><%= item.title %><span><%= item.price %>€</span></h4>
            </div>
            <div class="model-info">
              <%= link_to "Buy now", item_path(item) %>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="look">
          <%= link_to "Show", item_path(item.id) %>
          </div>
        </li>
        <% end %>
      </ul>
	</div>
</div>
