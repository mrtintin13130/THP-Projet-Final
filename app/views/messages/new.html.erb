<h1>New Message</h1>

<div class="display_mess" style="margin-bottom:15% ">
	<table class="table table-striped table-bordered" style="width:100%">
		<th><%= @user.last_name%></th>
		<th><%= User.find(params[:id]).last_name%></th>
		<tbody>
			<br>
			<tr>
				<% if @messages != nil %>
				<% @messages.each do |message| %>

				<% if message.dest_user_id == @user.id %>
				<td><%= message.content %></td>
				<td></td>
				<% elsif message.user_id == @user.id %>
				<td></td>
				<td><%= message.content %></td> 
				<% end %>
			</tr>
			<% end %>
			<% end %>
		</tbody>
	</table>
</div>

<%= form_with(model: @message, local: true) do |form| %>

<div class="field">
	<%= form.label :content, "Saisisssez votre message :" %>
	<%= form.text_field :content, id: 'message_tag' %>

	<%= hidden_field_tag "dest_id", params[:id] %>
	<div class="actions">
		<%= form.submit %>
	</div>
	<% end %>
</div>

<%= link_to 'Back', messages_path %>
